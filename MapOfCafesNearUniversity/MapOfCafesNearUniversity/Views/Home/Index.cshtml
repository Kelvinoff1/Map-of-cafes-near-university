@{
    ViewData["Title"] = "Мапа Кав'ярень";
}

<div class="page-container">

    <aside class="sidebar">

        <header class="sidebar-header">
            <div class="logo-placeholder">
                <img src="Logo.png" alt="Логотип сайту" class="site-logo" />
            </div>
        </header>

        <div class="filter-bar">
            <input type="text" id="search-input" placeholder="Пошук..." class="search-input">
        </div>

        <div class="results-header">
            <span id="results-count">Завантаження кав'ярень...</span>
        </div>

        <div class="results-list">
        </div>

    </aside>

    <main class="map-container">
        <div id="map"></div>
    </main>

</div>

<script id="cafes-data" type="application/json">
    @Html.Raw(ViewData["CafesJson"])
</script>

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script src="~/js/map.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof initializeMap === 'function') {
            initializeMap();
        }
    });
</script>